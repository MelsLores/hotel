
<div class=" container mt-5">
    @for (var i= ViewBag.TotalResenas.Count-1 ;i>=0;i--)
    {
        <div class="card">
            <div class="row py-5 mx-5">

                <div class="col-5">
                    <h5>Usuario #@ViewBag.TotalResenas[i].IdUsuario</h5>
                    <br />
                    <p>@ViewBag.TotalResenas[i].Reseña1</p>
                </div>
                <div class="col-3">
                    <h5>Tipo de habitación</h5>
                    <br />
                    <p>@ViewBag.TotalResenas[i].TipoHabitacionNavigation.Nombre</p>

                </div>
                <div class="col-4">
                    <h5>Puntuación</h5>
                    <br />

                    <div class="rating-wrap">
                        <div class="centerSR">
                            <fieldset class="rating">
                                @if (ViewBag.TotalResenas[i].Puntuacion == 5)
                                {
                                    <input type="radio" id="5.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" checked value="5" /><label for="5.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="4.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" value="4" /><label for="4.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="3.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" value="3" /><label for="3.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="2.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" value="2" /><label for="2.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="1.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" value="1" /><label for="1.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>

                                }

                                @if (ViewBag.TotalResenas[i].Puntuacion == 4)
                                {
                                    <input type="radio" id="5.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" value="5" /><label for="5.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="4.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" checked value="4" /><label for="4.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="3.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" value="3" /><label for="3.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="2.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" value="2" /><label for="2.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="1.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" value="1" /><label for="1.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>

                                }

                                @if (ViewBag.TotalResenas[i].Puntuacion == 3)
                                {
                                    <input type="radio" id="5.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" value="5" /><label for="5.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="4.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" value="4" /><label for="4.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="3.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" checked value="3" /><label for="3.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="2.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" value="2" /><label for="2.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="1.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" value="1" /><label for="1.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>

                                }

                                @if (ViewBag.TotalResenas[i].Puntuacion == 2)
                                {
                                    <input type="radio" id="5.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña"  value="5" /><label for="5.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="4.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" value="4" /><label for="4.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="3.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" value="3" /><label for="3.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="2.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" checked value="2" /><label for="2.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="1.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" value="1" /><label for="1.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>

                                }

                                @if (ViewBag.TotalResenas[i].Puntuacion == 1)
                                {
                                    <input type="radio" id="5.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña"  value="5" /><label for="5.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="4.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" value="4" /><label for="4.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="3.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" value="3" /><label for="3.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="2.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" value="2" /><label for="2.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>
                                    <input type="radio" id="1.0+@ViewBag.TotalResenas[i].IdReseña" name="@ViewBag.TotalResenas[i].IdReseña" checked value="1" /><label for="1.0+@ViewBag.TotalResenas[i].IdReseña" class="full"></label>

                                }

                            </fieldset>
                            <br /><br />
                        </div>

                    </div>
                    <br />
                    <p>@ViewBag.TotalResenas[i].Fecha</p>

                </div>

            </div>
        </div>

        <br />
        <br />
    }
</div>
